{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "USCore Encounter (minimal)",
  "type": "object",
  "required": ["resourceType", "class"],
  "properties": {
    "resourceType": { "const": "Encounter" },
    "status": { "type": "string" },
    "class": {
      "anyOf": [
        {"type": "object"},
        {"type": "array", "items": {"type": "object"}, "minItems": 1}
      ]
    },
    "subject": { "type": "object" },
    "period": { "type": "object" }
  }
}
