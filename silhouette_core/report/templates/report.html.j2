<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Repo Report</title>
  <style>
    body { font-family: sans-serif; margin: 1em; }
    .card { border: 1px solid #ccc; padding: 0.5em; margin-bottom: 0.5em; }
    .risk { background: #fcc; color: #900; padding: 0 4px; margin-right: 4px; border-radius: 3px; }
    @media print { section { page-break-before: always; } }
  </style>
</head>
<body>
  <section id="overview">
    <h1>Repository Report</h1>
    <p>Root: {{ repo.root }}</p>
    <p>Languages: {{ repo.detected_languages | join(', ') }}</p>
    <p>Files: {{ repo.stats.file_count }}</p>
    <p>Coverage: {{ '%.1f' % repo.test_coverage_summary.coverage_pct }}%</p>
    <p>CI: {% if repo.ci_tools.gh_actions %}GitHub Actions{% else %}None{% endif %}</p>
  </section>
  <section id="hotspots">
    <h2>Hotspots</h2>
    <table>
    {% for node in repo.top_centrality_nodes %}
      <tr><td>{{ node.path }}</td><td>{{ '%.2f' % node.centrality }}</td></tr>
    {% endfor %}
    </table>
  </section>
  <section id="services">
    <h2>Services</h2>
    {% for svc in repo.services %}
      <div class="card">
        <h3>{{ svc.name }}</h3>
        <p>{{ svc.path }}</p>
        <p>Languages: {{ svc.languages | join(', ') }}</p>
        <p>Owners: {{ svc.owners | join(', ') if svc.owners else 'none' }}</p>
        <p>
          {% for r, items in svc.risks.items() if items %}
            <span class="risk">{{ r }}</span>
          {% endfor %}
        </p>
      </div>
    {% endfor %}
  </section>
  <section id="entrypoints">
    <h2>Entrypoints</h2>
    <ul>
      {% for e in repo.entrypoints %}
        <li>{{ e }}</li>
      {% endfor %}
    </ul>
  </section>
  <section id="links">
    <a href="repo_map.json">View JSON</a>
  </section>
</body>
</html>
